---
import { Picture } from 'astro:assets';
import Screen1 from '../assets/Screenshot1.png';
import Screen2 from '../assets/Screenshot2.png';
import Screen3 from '../assets/Screenshot3.png';
import Screen4 from '../assets/Screenshot4.png';
import Screen5 from '../assets/Screenshot5.png';
import Screen6 from '../assets/Screenshot6.png';
import Screen7 from '../assets/Screenshot7.png';
import Screen8 from '../assets/Screenshot8.png';
import LogoLight from '../assets/SnowTracks_light.png';
import LogoDark from '../assets/SnowTracks_dark.png';

const screenshots = [
	{ src: Screen1, alt: 'SnowTracks Main Screen - Dark mode' },
	{ src: Screen2, alt: 'SnowTracks Main Screen - Light mode' },
	{ src: Screen3, alt: 'Maps Screen' },
	{ src: Screen4, alt: 'Tracks history screen' },
	{ src: Screen5, alt: 'Track details 1' },
	{ src: Screen6, alt: 'Track details 2' },
	{ src: Screen7, alt: 'Settings screen' },
	{ src: Screen8, alt: 'App Logo' },
];
---

<header class='pt-16 pb-8 px-6 text-center'>
	<div
		class='relative mx-auto w-24 h-24 shadow-2xl shadow-primary/20 mb-6 hover:scale-105 transition-transform overflow-hidden bg-transparent rounded-3xl'
	>
		<Picture
			src={LogoLight}
			alt='SnowTracks Logo'
			class='absolute inset-0 w-full h-full object-cover block dark:hidden'
			pictureAttributes={{
				class: 'absolute inset-0 w-full h-full block dark:hidden',
			}}
		/>
		<Picture
			src={LogoDark}
			alt='SnowTracks Logo'
			class='absolute inset-0 w-full h-full object-cover hidden dark:block'
			pictureAttributes={{
				class: 'absolute inset-0 w-full h-full hidden dark:block',
			}}
		/>
	</div>
	<h1
		class='text-4xl text-foreground font-black tracking-tighter uppercase mb-2'
	>
		SnowTracks
	</h1>
	<p class='text-muted-foreground font-medium italic'>
		Your mountain, measured.
	</p>
</header>

<section
	class='flex flex-col sm:flex-row items-center justify-center gap-4 px-6 mb-20'
>
	<a href='#' class='hover:opacity-80 transition-opacity'>
		<img
			src='https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg'
			alt='Google Play'
			class='h-14'
		/>
	</a>
	<a href='#' class='hover:opacity-80 transition-opacity'>
		<img
			src='https://upload.wikimedia.org/wikipedia/commons/3/3c/Download_on_the_App_Store_Badge.svg'
			alt='App Store'
			class='h-14'
		/>
	</a>
</section>

<section class='max-w-6xl mx-auto px-6 pb-24'>
	<h2
		class='text-xs font-bold tracking-[0.3em] uppercase text-center text-muted-foreground mb-10'
	>
		App Gallery
	</h2>

	<div class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8'>
		{
			screenshots.map((item) => (
				<div class='bg-card border-4 sm:border-8 border-border rounded-[2.5rem] overflow-hidden shadow-xl aspect-9/16 flex items-center justify-center'>
					<Picture
						src={item.src}
						formats={['avif', 'webp']}
						alt={item.alt}
						class='w-full h-full object-cover'
						pictureAttributes={{ class: 'w-full h-full block' }}
					/>
				</div>
			))
		}
	</div>
</section>
